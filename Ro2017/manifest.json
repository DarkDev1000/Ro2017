{
    "name": "Ro2017",
    "description": "Makes your Roblox look like it's old 2017 style!",
    "version": "1.1.2",
    "manifest_version": 3,

    "action" : {
        "default_icon": "assets/roblox.png"
    },

    "host_permissions": [
	"https://*.roblox.com/*"
    ],


    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "scripts/theme.js"
            ]
        }
    ],

    "icons": {
        "16": "assets/roblox.png",
        "32": "assets/roblox.png",
        "48": "assets/roblox.png",
        "128": "assets/roblox.png"
    }
}